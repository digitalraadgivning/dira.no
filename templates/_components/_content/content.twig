{% set pageContent = entry.pageContent.all() %}
{% set formLoaded = false %}

{% if pageContent | length %}
    <div class="page-content">
        {% for module in pageContent %}
            {% include '_components/_content/modules/' ~ module.type with {
                module: module,
                moduleIndex: loop.index,
                formLoaded: formLoaded
            } %}

            {% if module.type == 'contactForm' %}
                {% set formLoaded = true %}
            {% endif %}
        {% endfor %}
    </div>
{% endif %}